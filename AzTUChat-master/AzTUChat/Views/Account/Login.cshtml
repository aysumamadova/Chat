@model LoginVM
@{ 
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/assets/style.css" />
    <title>Login</title>
</head>

<body>
    <section class="area-login">
        <h1>Giriş</h1>
        <div class="login">
            <form method="post">
                <input asp-for="UserName" placeholder="İstifadəçi adınız"/>
                <input asp-for="Password" placeholder="Parolunuz" />
                <input type="submit" value="Giriş" />
                <div asp-validation-summary="ModelOnly"></div>
            </form>
            <p>Hesaba ehtiyacın var? <a asp-action="Register">Qeydiyyatdan keç</a></p>
        </div>
    </section>
</body>

</html>