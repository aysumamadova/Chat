@model RegisterVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/assets/style.css" />
    <title>Login</title>
</head>

<body>
    <section class="area-login">
        <h1>Qeydiyyatdan</h1>
        <div class="login">
            <form method="post" enctype="multipart/form-data">
                <input asp-for="FullName" placeholder="Ad və soyadınız" autofocus />
                <input asp-for="UserName"  placeholder="İstifadəçi adınız" />
                <input asp-for="Password"  placeholder="Parolunuz" />
                <input asp-for="Image" />
                <input type="submit" value="Təsdiqlə" />
            </form>
            <p>Hesabın var? <a asp-action="Register">Giriş</a></p>
        </div>
    </section>
</body>

</html>